<Window x:Class="Proverkka.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proverkka"
        mc:Ignorable="d"
        Title="DialogWindow" Height="140" Width="332">
     <Grid>
                <Grid.ColumnDefinitions>
                </Grid.ColumnDefinitions>
                <Button x:Name="Button" Content="Добавить новый тип" Margin="0,70,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="118" Grid.ColumnSpan="2" Click="Button_Click"/>
                <Label Content="Введите тип добавляемой заметки" HorizontalAlignment="Center" Margin="0,-70,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                <TextBox x:Name="textBox" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="232" Grid.ColumnSpan="2"/>

            
    </Grid>
</Window>
